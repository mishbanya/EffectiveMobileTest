<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/offer_background"
    android:layout_width="132dp"
    android:layout_height="120dp"
    android:layout_margin="12dp"
    android:background="@drawable/rounded_background"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/offer_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/offer_background"
        app:layout_constraintStart_toStartOf="@id/offer_background"
        android:src="@drawable/offer_near_vacancies"
        android:layout_margin="8dp"/>
    <TextView
        android:id="@+id/offer_text"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/offer_text"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/offer_icon"
        app:layout_constraintStart_toStartOf="@id/offer_background"/>
    <Button
        android:id="@+id/offer_button"
        android:layout_width="match_parent"
        android:padding="0dp"
        android:layout_height="30dp"
        android:textAllCaps="false"
        android:gravity="top"
        android:textSize="11sp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/button_text"
        android:textColor="@color/green"
        android:backgroundTint="@color/shadow"
        app:layout_constraintTop_toBottomOf="@+id/offer_text"
        app:layout_constraintStart_toStartOf="@id/offer_background"/>

</androidx.constraintlayout.widget.ConstraintLayout>